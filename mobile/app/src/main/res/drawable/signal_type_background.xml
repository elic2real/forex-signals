<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- BUY signal background -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/buy_color" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/buy_color" />
        </shape>
    </item>
    
    <!-- SELL signal background -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sell_color" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/sell_color" />
        </shape>
    </item>
    
    <!-- Default signal background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_color" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/neutral_color" />
        </shape>
    </item>
</selector>
