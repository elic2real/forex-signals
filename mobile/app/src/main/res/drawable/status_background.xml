<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active status background -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/status_active" />
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="@color/status_active" />
        </shape>
    </item>
    
    <!-- Closed status background -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/status_closed" />
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="@color/status_closed" />
        </shape>
    </item>
    
    <!-- Expired status background -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/status_expired" />
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="@color/status_expired" />
        </shape>
    </item>
    
    <!-- Default status background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_color" />
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="@color/neutral_color" />
        </shape>
    </item>
</selector>
